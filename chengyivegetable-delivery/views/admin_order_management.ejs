    // è¼‰å…¥è¨‚å–®åˆ—è¡¨
    async function loadOrders() {
      try {
        showLoading();
        
        const response = await fetch('/api/admin/orders-list');
        const data = await response.json();
        
        if (data.success) {
          orders = data.orders || [];
          filteredOrders = [...orders];
          updateOrdersDisplay();
          updateStats();
        } else {
          showError('è¼‰å…¥è¨‚å–®å¤±æ•—: ' + data.message);
