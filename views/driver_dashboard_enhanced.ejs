    <style>
        .dash{display:grid;grid-template-columns:1fr 1fr;gap:20px;padding:20px;max-width:1200px;margin:0 auto}
        
        .card{background:#fff;border-radius:12px;padding:20px;box-shadow:0 4px 6px rgba(0,0,0,.1);border-left:4px solid #27ae60}
        
        .orders{grid-column:1/-1}
        
        .order{background:#f8f9fa;border-radius:8px;padding:15px;margin-bottom:15px;border-left:4px solid;transition:all .3s}
        
        .order.new{border-left-color:#3498db}
