    <script>
        let map;
        let driverMarker;
        let orderMarkers = [];
        let currentLocation = null;
        let websocket = null;

        // åˆå§‹åŒ–åœ°åœ–
        function initMap() {
            // é è¨­ä½ç½®ï¼šä¸‰å³½åœ°å€
            const defaultPosition = { lat: 24.9347, lng: 121.5681 };
            
            map = new google.maps.Map(document.getElementById('driver-map'), {
                zoom: 15,
                center: defaultPosition,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });

            // åˆå§‹åŒ–å¤–é€å“¡ä½ç½®æ¨™è¨˜
            driverMarker = new google.maps.Marker({
                position: defaultPosition,
                map: map,
                title: 'æˆ‘çš„ä½ç½®',
                icon: {
                    url: 'data:image/svg+xml;base64,',
                    scaledSize: new google.maps.Size(32, 32)
                }
            });

            // ç²å–ç•¶å‰ä½ç½®
            getCurrentLocation();
        }

        // ç²å–ç•¶å‰ä½ç½®
        function getCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    position => {
                        const pos = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };
                        
                        currentLocation = pos;
                        map.setCenter(pos);
                        driverMarker.setPosition(pos);
                        
                        // ç™¼é€ä½ç½®åˆ°æœå‹™å™¨
                        updateDriverLocation(pos.lat, pos.lng);
                    },
                    error => {
                        console.error('ç„¡æ³•ç²å–ä½ç½®:', error);
                        showNotification('ç„¡æ³•ç²å–GPSä½ç½®ï¼Œä½¿ç”¨é è¨­ä½ç½®', 'warning');
                    }
                );
            }
        }

        // æ›´æ–°ä½ç½®æŒ‰éˆ•
        function updateLocation() {
            getCurrentLocation();
            showNotification('ä½ç½®å·²æ›´æ–°', 'success');
        }

        // å»ºç«‹WebSocketé€£æ¥
        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.host}/ws/driver/<%= driverId %>`;
            
            websocket = new WebSocket(wsUrl);
            
            websocket.onopen = function() {
                console.log('WebSocketé€£æ¥å·²å»ºç«‹');
                showNotification('å³æ™‚é€šè¨Šå·²é€£æ¥', 'success');
            };
            
            websocket.onmessage = function(event) {
                const data = JSON.parse(event.data);
                handleWebSocketMessage(data);
            };
            
            websocket.onclose = function() {
                console.log('WebSocketé€£æ¥å·²é—œé–‰ï¼Œå˜—è©¦é‡é€£...');
                setTimeout(connectWebSocket, 3000);
            };
            
            websocket.onerror = function(error) {
                console.error('WebSocketéŒ¯èª¤:', error);
            };
        }

        // è™•ç†WebSocketè¨Šæ¯
        function handleWebSocketMessage(data) {
            switch(data.type) {
                case 'new_order':
                    addAvailableOrder(data.order);
                    showNotification(`æ–°è¨‚å–®ï¼é…é€åˆ° ${data.order.address}`, 'info');
                    break;
                case 'order_assigned':
                    moveOrderToMyOrders(data.order);
                    showNotification(`è¨‚å–® #${data.order.id} å·²åˆ†é…çµ¦æ‚¨`, 'success');
                    break;
                case 'order_cancelled':
                    removeOrder(data.order.id);
                    showNotification(`è¨‚å–® #${data.order.id} å·²å–æ¶ˆ`, 'warning');
                    break;
            }
        }

        // è¼‰å…¥å¾…é…é€è¨‚å–®
        async function loadPendingOrders() {
            try {
                const response = await fetch('/api/driver/available-orders');
                const orders = await response.json();
                
                const container = document.getElementById('pending-orders');
                container.innerHTML = '';
                
                if (orders.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: #7f8c8d;">ç›®å‰æ²’æœ‰å¾…é…é€è¨‚å–®</p>';
                    return;
                }
                
                orders.forEach(order => {
                    const orderElement = createOrderCard(order, 'pending');
                    container.appendChild(orderElement);
                });
                
                // åœ¨åœ°åœ–ä¸Šé¡¯ç¤ºè¨‚å–®ä½ç½®
                showOrdersOnMap(orders);
                
            } catch (error) {
                console.error('è¼‰å…¥å¾…é…é€è¨‚å–®å¤±æ•—:', error);
            }
        }

        // è¼‰å…¥æ­£åœ¨é…é€è¨‚å–®
        async function loadDeliveringOrders() {
            try {
                const response = await fetch('/api/driver/my-orders');
                const orders = await response.json();
                
                const container = document.getElementById('delivering-orders');
                container.innerHTML = '';
                
                if (orders.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: #7f8c8d;">ç›®å‰æ²’æœ‰é…é€ä¸­è¨‚å–®</p>';
                    return;
                }
                
                orders.forEach(order => {
                    const orderElement = createOrderCard(order, 'delivering');
                    container.appendChild(orderElement);
                });
                
            } catch (error) {
                console.error('è¼‰å…¥é…é€ä¸­è¨‚å–®å¤±æ•—:', error);
            }
        }

        // è¼‰å…¥å·²å®Œæˆè¨‚å–®
        async function loadCompletedOrders() {
            try {
                const response = await fetch('/api/driver/completed-orders');
                const orders = await response.json();
                
                const container = document.getElementById('completed-orders');
                container.innerHTML = '';
                
                if (orders.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: #7f8c8d;">ä»Šæ—¥å°šç„¡å®Œæˆè¨‚å–®</p>';
                    return;
                }
                
                orders.forEach(order => {
                    const orderElement = createOrderCard(order, 'completed');
                    container.appendChild(orderElement);
                });
                
            } catch (error) {
                console.error('è¼‰å…¥å·²å®Œæˆè¨‚å–®å¤±æ•—:', error);
            }
        }

        // å‰µå»ºè¨‚å–®å¡ç‰‡
        function createOrderCard(order, type) {
            const div = document.createElement('div');
            div.className = `order-card ${order.status}`;
            div.setAttribute('data-order-id', order.id);
            
            const statusText = getStatusText(order.status);
            const distance = calculateDistance(order.lat, order.lng);
            
            div.innerHTML = `
                <div class="order-header">
                    <span class="order-id">#${order.id}</span>
                    <span class="order-status status-${order.status}">${statusText}</span>
                </div>
                <div class="order-details">
