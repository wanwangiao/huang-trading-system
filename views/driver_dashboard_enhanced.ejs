        }

        // é–‹å§‹é…é€
        async function startDelivery(orderId) {
            try {
                const response = await fetch(`/api/driver/start-delivery/${orderId}`, {
                    method: 'POST'
                });
                
                if (response.ok) {
                    showNotification('é–‹å§‹é…é€ï¼', 'success');
                    loadDeliveringOrders();
                } else {
                    showNotification('é–‹å§‹é…é€å¤±æ•—', 'error');
                }
            } catch (error) {
                console.error('é–‹å§‹é…é€éŒ¯èª¤:', error);
            }
        }

        // å®Œæˆé…é€
        async function completeDelivery(orderId) {
            try {
                const response = await fetch(`/api/driver/complete-delivery/${orderId}`, {
                    method: 'POST'
                });
                
                if (response.ok) {
                    showNotification('é…é€å®Œæˆï¼', 'success');
                    loadDeliveringOrders();
                    loadCompletedOrders();
                    loadTodayStats();
                } else {
                    showNotification('å®Œæˆé…é€å¤±æ•—', 'error');
                }
            } catch (error) {
                console.error('å®Œæˆé…é€éŒ¯èª¤:', error);
            }
        }

        // åœ¨åœ°åœ–ä¸Šé¡¯ç¤ºè¨‚å–®ä½ç½®
        function showOrderOnMap(lat, lng) {
            const orderPosition = { lat: parseFloat(lat), lng: parseFloat(lng) };
            map.setCenter(orderPosition);
            map.setZoom(16);
            
            // æ·»åŠ ç›®æ¨™æ¨™è¨˜
            const targetMarker = new google.maps.Marker({
                position: orderPosition,
                map: map,
                title: 'é…é€åœ°å€',
                icon: {
                    url: 'data:image/svg+xml;base64,',
                    scaledSize: new google.maps.Size(32, 32)
                }
            });
            
            // è¨ˆç®—è·¯ç·š
            if (currentLocation) {
                const directionsService = new google.maps.DirectionsService();
                const directionsRenderer = new google.maps.DirectionsRenderer();
                directionsRenderer.setMap(map);
                
                directionsService.route({
                    origin: currentLocation,
                    destination: orderPosition,
                    travelMode: google.maps.TravelMode.DRIVING
                }, (result, status) => {
                    if (status === 'OK') {
                        directionsRenderer.setDirections(result);
                    }
                });
            }
        }

        // è¼‰å…¥ä»Šæ—¥çµ±è¨ˆ
        async function loadTodayStats() {
            try {
                const response = await fetch('/api/driver/today-stats');
                const stats = await response.json();
                
                document.getElementById('today-deliveries').textContent = stats.deliveries || 0;
                
            } catch (error) {
                console.error('è¼‰å…¥çµ±è¨ˆè³‡æ–™å¤±æ•—:', error);
            }
        }

        // æ›´æ–°å¤–é€å“¡ä½ç½®åˆ°æœå‹™å™¨
        async function updateDriverLocation(lat, lng) {
            try {
                await fetch('/api/driver/update-location', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ lat, lng })
