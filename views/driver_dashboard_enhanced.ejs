            }
        }

        // é é¢åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            initMap();
            connectWebSocket();
            loadPendingOrders();
            loadDeliveringOrders();
            loadCompletedOrders();
            loadTodayStats();
            
            // å®šæ™‚æ›´æ–°ä½ç½®
            setInterval(getCurrentLocation, 30000); // 30ç§’æ›´æ–°ä¸€æ¬¡ä½ç½®
            setInterval(loadPendingOrders, 60000); // 60ç§’åˆ·æ–°ä¸€æ¬¡å¾…é…é€è¨‚å–®
            setInterval(loadDeliveringOrders, 30000); // 30ç§’åˆ·æ–°é…é€ä¸­è¨‚å–®
        });
    </script>
